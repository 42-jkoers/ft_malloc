# See: https://clang.llvm.org/docs/ClangFormatStyleOptions.html

BasedOnStyle: LLVM
UseTab: Always
TabWidth: 4
IndentWidth: 4
ColumnLimit: 0
AlignConsecutiveDeclarations: AcrossEmptyLines
PointerAlignment: Left

BraceWrapping:
  AfterClass:            true
  AfterControlStatement: true
  AfterEnum:             true
  AfterFunction:         true
  AfterNamespace:        true
  AfterObjCDeclaration:  true
  AfterStruct:           true
  AfterUnion:            true
  BeforeCatch:           true
  BeforeElse:            true
BreakBeforeBraces: Custom
